{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://my-app-domain/schemas/chicken",
  "title": "Chicken",
  "description": "A chicken document",
  "type": "object",
  "required": [
    "id",
    "tracking"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string"
    },
    "weight": {
      "type": "number"
    },
    "breed": {
      "type": "string"
    },
    "color": {
      "type": "string"
    },
    "tracking": {
      "type": "object",
      "properties": {
        "createdDate": {
          "type": "object",
          "format": "date-time"
        },
        "updatedDate": {
          "type": "object",
          "format": "date-time"
        }
      }
    }
  }
}